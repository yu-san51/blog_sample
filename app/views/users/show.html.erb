<div class="user-page">
	<div class="user-profile">
		<div class="user-img">
			<%= attachment_image_tag @user, :user_image %>
		</div>
		<div class="introduction">
			<%= @user.name %>
			<%= @user.introduction %>
		</div>
	</div>

	<div class="user-blog">
		<%= @posts.each do |post| %>
			<h3 class="blog-title">
				<%= link_to "#{post.title}", post_image_path(post.id) %>
			</h3>
			<div class="img-box">
				<%= attachment_image_tag post.post_image, :image %>
			</div>
			<div class="user-info">
				<div class="userphoto">
					<%= attachment_image_tag post.user.user_image, :user_image %>
				</div>
				<div class="username">
					<%= post.user.name %>
				</div>
			</div>
			<div class="post-info">
				<div class="date">
					<%= post.created_at.strftime("%Y/%m/%d") %>
				</div>
				<div class="category">
				</div>
				<div class="nice">
					<%= @post_image.favorites.count %> いいね
				</div>
				<div class="comment">
					<%= link_to "#{@post.post_comments.count} コメント", post_image_path(post.id) %>
				</div>
			</div>
			<div class="caption">
			</div>
		<% end %>
		<%= paginate @posts, class: "paginate" %>
	</div>
</div>
<div>
	<%= link_to "投稿", new_post_image_path %>
</div>